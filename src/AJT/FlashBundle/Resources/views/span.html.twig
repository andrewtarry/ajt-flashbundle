{% for type, messages in app.session.getFlashBag().all() %}
    {% for message in messages %}
        {{ include('AJTFlashBundle::single.html.twig', { 'element': 'span', 'type': type, 'message': message }) }}
    {% endfor %}
{% endfor %}
